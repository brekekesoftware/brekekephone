<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Loading State -->
  <item android:state_activated="true">
    <layer-list>
      <item>
        <shape android:shape="oval">
          <solid android:color="@color/white" />
        </shape>
      </item>
      <item
        android:top="10dp"
        android:left="10dp"
        android:bottom="10dp"
        android:right="10dp"
      >
        <animated-rotate
          android:drawable="@drawable/loading_indicator"
          android:pivotX="50%"
          android:pivotY="50%"
        />
      </item>
    </layer-list>
  </item>
  <!-- Normal State -->
  <item android:state_selected="false">
    <layer-list>
      <item>
        <shape android:shape="oval">
          <solid android:color="@color/white" />
        </shape>
      </item>
      <item
        android:top="10dp"
        android:left="10dp"
        android:bottom="10dp"
        android:right="10dp"
        android:drawable="@drawable/ic_hold"
      />
    </layer-list>
  </item>
  <!-- Selected State -->
  <item android:state_selected="true">
    <layer-list>
      <item>
        <shape android:shape="oval">
          <solid android:color="@color/yellow" />
        </shape>
      </item>
      <item
        android:top="10dp"
        android:left="10dp"
        android:bottom="10dp"
        android:right="10dp"
        android:drawable="@drawable/ic_hold_active"
      />
    </layer-list>
  </item>
</selector>

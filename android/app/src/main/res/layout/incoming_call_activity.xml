<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="@drawable/bg_incoming_call_screen"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.brekeke.phonedev.IncomingCallActivity"
>
  <!-- view_webrtc_video -->
  <RelativeLayout
    android:id="@+id/view_webrtc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:background="@color/black"
  />
  <RelativeLayout
    android:id="@+id/header_incoming"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:layout_height="wrap_content"
  >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:gravity="center"
          android:text="Brekeke Phone"
          android:textColor="@color/white"
          android:textSize="20dp"
          android:textStyle="normal"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <androidx.cardview.widget.CardView
          android:id="@+id/card_avatar"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_marginTop="20dp"
          android:elevation="0dp"
          app:cardCornerRadius="50dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center" />
      </androidx.cardview.widget.CardView>

      <TextView
          android:id="@+id/txt_caller_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:gravity="center"
          android:text="Caller Name"
          android:textColor="@color/white"
          android:textSize="36dp"
          android:textStyle="bold"
          app:layout_constraintTop_toBottomOf="@+id/card_avatar"
          tools:layout_editor_absoluteX="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </RelativeLayout>
  <RelativeLayout
    android:id="@+id/header_manage_call"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
  >
    <TextView
      android:id="@+id/txt_header_caller_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:gravity="center"
      android:text="Caller Name"
      android:textColor="@color/white"
      android:textSize="36dp"
      android:textStyle="bold"
    />
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:gravity="center"
      android:text="Brekeke Phone"
      android:textColor="@color/white"
      android:textSize="20dp"
      android:textStyle="normal"
    />
  </RelativeLayout>

  <!-- view_incoming_call -->
  <RelativeLayout
    android:id="@+id/view_incoming_call"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:layout_alignParentBottom="true"
      android:layout_centerInParent="true"
    >
      <Button
        android:id="@+id/btn_answer"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:paddingTop="39dp"
        android:paddingLeft="13dp"
        android:background="@drawable/btn_answer"
        android:drawableLeft="@drawable/ic_answer"
      />
      <Button
        android:id="@+id/btn_reject"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="200dp"
        android:paddingTop="39dp"
        android:paddingLeft="13dp"
        android:background="@drawable/btn_reject"
        android:drawableLeft="@drawable/ic_reject"
      />
    </LinearLayout>
    <TextView
      android:id="@+id/txt_incoming_call"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:gravity="center"
      android:text="Incoming Call"
      android:textColor="@color/white"
      android:textSize="20dp"
    />
  </RelativeLayout>

  <!-- view_call_manage -->
  <RelativeLayout
    android:id="@+id/view_call_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
  >
    <Button
      android:id="@+id/btn_unlock"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="UNLOCK"
      android:background="@drawable/btn_unlock"
      android:textColor="@color/black"
      android:textSize="12dp"
      android:textStyle="bold"
      android:gravity="top"
      android:layout_marginTop="120dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:paddingHorizontal="20dp"
      android:paddingTop="15dp"
    />
    <RelativeLayout
      android:id="@+id/view_call_manage_loading"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_centerVertical="true"
      android:orientation="vertical"
    >
      <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/white"
      />
      <TextView
        android:id="@+id/txt_connecting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Connecting..."
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="normal"
      />
    </RelativeLayout>
    <LinearLayout
      android:id="@+id/view_call_manage_controls"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_centerVertical="true"
      android:orientation="vertical"
      android:visibility="gone"
    >
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
      >
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_margin="5dp"
        >
          <Button
            android:id="@+id/btn_transfer"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/bg_white"
            android:drawableLeft="@drawable/ic_transfer"
            android:paddingLeft="13dp"
            android:paddingTop="39dp"
          />
          <TextView
            android:id="@+id/txt_transfer_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRANSFER"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
          />
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_margin="5dp"
        >
          <Button
            android:id="@+id/btn_park"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/bg_white"
            android:drawableLeft="@drawable/ic_park"
            android:paddingLeft="13dp"
            android:paddingTop="39dp"
          />
          <TextView
            android:id="@+id/txt_park_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PARK"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
          />
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_margin="5dp"
        >
          <Button
            android:id="@+id/btn_video"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/btn_video"
          />
          <TextView
            android:id="@+id/txt_video_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIDEO"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
          />
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_margin="5dp"
        >
          <Button
            android:id="@+id/btn_speaker"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/btn_speaker"
          />
          <TextView
            android:id="@+id/txt_speaker_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPEAKER"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
          />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
      >
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_margin="5dp"
        >
          <Button
            android:id="@+id/btn_mute"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/btn_mute"
          />
          <TextView
            android:id="@+id/txt_mute_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MUTE"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
          />
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_margin="5dp"
        >
          <Button
            android:id="@+id/btn_record"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/btn_record"
          />
          <TextView
            android:id="@+id/txt_record_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECORD"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
          />
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_margin="5dp"
        >
          <Button
            android:id="@+id/btn_dtmf"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/bg_white"
            android:drawableLeft="@drawable/ic_dtmf"
            android:paddingLeft="13dp"
            android:paddingTop="39dp"
          />
          <TextView
            android:id="@+id/txt_dtmf_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DTMF"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
          />
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_margin="5dp"
        >
          <Button
            android:id="@+id/btn_hold"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/btn_hold"
          />
          <TextView
            android:id="@+id/txt_hold_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOLD"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
          />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerInParent="true"
      android:layout_marginBottom="20dp"
    >
      <Button
        android:id="@+id/btn_end_call"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:paddingLeft="13dp"
        android:paddingTop="39dp"
        android:background="@drawable/btn_reject"
        android:drawableLeft="@drawable/ic_reject"
      />
      <TextView
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/txt_call_is_on_hold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CALL IS ON HOLD"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
      />
    </RelativeLayout>
  </RelativeLayout>
</RelativeLayout>

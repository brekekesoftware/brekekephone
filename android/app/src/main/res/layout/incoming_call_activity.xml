<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:background="@drawable/bg_incoming_call_screen"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:paddingBottom="20dp"
  tools:context="com.brekeke.phone.IncomingCallActivity"
>
  <TextView
    android:gravity="center"
    android:id="@+id/txt_caller_name"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:text="Caller Name"
    android:textColor="@color/white"
    android:textSize="36sp"
    android:textStyle="bold"
  />
  <TextView
    android:gravity="center"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_width="match_parent"
    android:text="Brekeke Phone"
    android:textColor="@color/white"
    android:textSize="20dp"
    android:textStyle="normal"
  />
  <RelativeLayout
    android:gravity="bottom"
    android:layout_height="434dp"
    android:layout_width="match_parent"
  >
    <LinearLayout
      android:layout_centerInParent="true"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
    >
      <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
      >
        <TextView
          android:gravity="center"
          android:id="@+id/txt_call_status"
          android:layout_height="wrap_content"
          android:layout_marginBottom="20dp"
          android:layout_width="match_parent"
          android:text="Incoming Call"
          android:textColor="@color/white"
          android:textSize="20dp"
          android:textStyle="normal"
        />
      </RelativeLayout>
    </LinearLayout>
  </RelativeLayout>
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:gravity="bottom"
    android:layout_alignParentBottom="true"
  >
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
    >
      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      >
        <Button
          android:id="@+id/btn_close"
          android:layout_width="65dp"
          android:layout_height="65dp"
          android:background="@drawable/btn_close"
          android:drawableLeft="@drawable/ic_close"
          android:paddingLeft="13dp"
          android:paddingTop="39dp"
          android:visibility="invisible"
          android:layout_centerHorizontal="true"
        />
        <Button
          android:id="@+id/btn_answer"
          android:layout_width="65dp"
          android:layout_height="65dp"
          android:background="@drawable/btn_answer"
          android:drawableLeft="@drawable/ic_answer"
          android:paddingLeft="13dp"
          android:paddingTop="39dp"
        />
        <Button
          android:id="@+id/btn_reject"
          android:layout_marginLeft="200dp"
          android:layout_width="65dp"
          android:layout_height="65dp"
          android:background="@drawable/btn_reject"
          android:drawableLeft="@drawable/ic_reject"
          android:paddingLeft="13dp"
          android:paddingTop="39dp"
        />
      </RelativeLayout>
    </LinearLayout>
  </RelativeLayout>
</RelativeLayout>
